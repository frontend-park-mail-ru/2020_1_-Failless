<div class="auth">
    <div class="auth__item">
        <div class="auth__title gradient-text {{ title_style }}">{{ title }}</div>
        <form id="form">
            {{#each input}}
                <div class="auth__input">
                    <div class="auth__help">{{ this.title }}</div>
                    <input class="input input__auth" type="{{ this.type }}"
                           placeholder="{{ this.placeholder }}" {{#if this.autocomplete }} autocomplete="{{ this.autocomplete }}" {{/if}}
                        {{#each this.others}} {{ this }}{{/each}}>
                </div>
            {{/each}}
            <div class="auth__btn">
                <button class="re_btn re_btn__outline" type="submit">{{ button }}</button>
            </div>
        </form>
    </div>
</div>
