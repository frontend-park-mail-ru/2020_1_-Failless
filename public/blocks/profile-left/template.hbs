<div class="profile-left">
    <h2>{{ profile.name }}{{#if profile.age}}, {{ profile.age }}{{/if}}</h2>
    <div class="profile-left__body">
        <form action="submit" id="form">
            <div class="profile-left__avatar" >
                <input id="photoUpload" type="file" data-bind-event="photoUpload" multiple/>
                {{> $Blocks/avatar/template avatar=profile.avatar }}
            </div>
            <div class="profile-left__options-field">
                <h3>{{ ABOUT }}</h3>
                {{> $Blocks/textarea/template body=profile.about rows=10 name='about' placeholder=ABOUT_PLACEHOLDER data_bind_event='saveAbout'}}
            </div>
            <div class="profile-left__options-field">
                <div class="profile-left__header">
                    <div class="section">
                        <div class="section__header section__header_3">
                            <h3>{{ YOUR_TAGS }}</h3>
                            <a href="" class="tags-redirect" data-bind-event="showModalTags">{{ ADD }}</a>
                        </div>
                    </div>
                </div>
                <div class="profile-left__tags" data-bind-event="removeTags"></div>
            </div>
            <div class="profile-left__exit">
                {{> $Blocks/button-comp/template button_logout}}
            </div>
        </form>
    </div>
</div>
