<div class="feed-right">
    {{#if isEvent }}
        {{#if followers}}
            <div class="feed-right__title">
                <div class="font font_bold font__color_black font__size_small-xx">Уже идут</div>
            </div>
            {{#each followers as |user-card|}}
                {{> $Blocks/user-card/template }}
            {{/each}}
        {{else}}
            <h3 class="feed-right__helper feed-right__helper_blue">"Подписчиков нет"</h3>
        {{/if}}
    {{else}}
        {{#if this.personalEvents}}
            <div class="feed-right__title">
                <div class="font font_bold font__color_black font__size_small-xx">Персональные эвенты</div>
            </div>
            {{#each this.personalEvents as |event|}}
                {{> $Blocks/event/template }}
            {{/each}}
        {{else}}
            <h3 class="feed-right__helper feed-right__helper_blue">"Эвентов нет :("</h3>
        {{/if}}
    {{/if}}
</div>